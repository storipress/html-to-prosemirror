{
  "name": "ueberdosis/html-to-prosemirror",
  "type": "library",
  "description": "Takes HTML and outputs ProseMirror compatible JSON.",
  "keywords": [
    "prosemirror"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Hans Pagel"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-dom": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "~2.26",
    "friendsofphp/php-cs-fixer": "~3.8",
    "league/climate": "~3.8",
    "phpunit/phpunit": "~9.5"
  },
  "autoload": {
    "psr-4": {
      "HtmlToProseMirror\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HtmlToProseMirror\\Test\\": "tests/"
    }
  },
  "scripts": {
    "format": [
      "vendor/bin/php-cs-fixer fix"
    ]
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ueberdosis/"
    }
  ],
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  }
}
